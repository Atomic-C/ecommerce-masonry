@model ecommerce_masonry.Models.ApplicationType


<form method="post" asp-action="Create">
    @*We can delete this "asp-action="Create"". It's optional' because we are in Create post action and it is the same name as Create*@

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3"> Create Application Type</h2>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class=" btn btn-info w-100" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>
</form>

@*The below section adds the client side validation*@
@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }

}
