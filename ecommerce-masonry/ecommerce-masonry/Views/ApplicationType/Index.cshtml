@model IEnumerable<ecommerce_masonry.Models.ApplicationType>;

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class=" btn btn-primary">
                Create New ApplicationType
            </a>
        </div>
    </div>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.CategoryName</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>}
    else
    {
        <p>No application type available.</p>}
</div>
