@model IEnumerable<Masonry_Models.ApplicationType>;

<div class="container p-3 bg-white">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class=" btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New ApplicationType
            </a>
        </div>
    </div>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>

            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
<tr>
    <td width="50%">@obj.CategoryName</td>
    <td class="text-center">
        @* So, do we use  asp-route-data="@obj.ID" or asp-route-id="@obj.ID" ???*@
        <div class="w-75 btn-group" role="group">
            @*Below is how we access controller and respective action we wish*@
            <a asp-controller="ApplicationType" asp-route-id="@obj.ID" asp-action="Edit" class=" btn btn-primary mx-2">
                @*What controller and what action method?*@
                <i class="fas fa-edit"></i> &nbsp; Edit
            </a>
            @*Below is how we access controller and respective action we wish*@
            <a asp-controller="ApplicationType" asp-route-id="@obj.ID" asp-action="Delete" class=" btn btn-danger mx-2">
                @*What controller and what action method?*@
                <i class="fas fa-trash-alt"></i> &nbsp; Delete
            </a>
        </div>
    </td>
</tr>
}
    </tbody>
</table>}
else
{
<p>No application type available.</p>}
</div>
