@model ecommerce_masonry.Models.Product
@*Form executes post method and looks for post action method of "DeletePost"*@
<form method="post" asp-action="Delete">
    @*We can delete this "asp-action="DeletePost"". It's optional' because we are in DeletePost post action and it is the same name as DeletePost*@


    <input asp-for="Id" hidden /> @*"hidden" solves an error, when we have a complex object in category. Test it.*@



    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="form-group row">
        <h2 class="text-info pl-3"> Delete Product</h2>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.CategoryName" disabled class="form-control" />
                    </div>

                </div>                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.CategoryName" disabled class="form-control" />
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button type="submit" class=" btn btn-danger w-100"><i class="fas fa-trash-alt"></i> &nbsp; Delete</button>

                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> &nbsp; Back</a>
                            @* If we're using views within same category, asp-controller="category" can be optional'  *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
    <img src="@WebConstance.imagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />};
            </div>
        </div>
    </div>
    </div>
</form>

@*The below section adds the client side validation*@
@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 300,
                disable: true
            });
        });

                                                                                                                                    }</script>
}
