@model ecommerce_masonry.Models.Category


<form method="post" asp-action="DeletePost">
    @*We can delete this "asp-action="DeletePost"". It's optional' because we are in DeletePost post action and it is the same name as DeletePost*@
    <input asp-for="ID" hidden /> @*This solves an error, when we have a complex object in category. Test it.*@
    @*Form executes post method and looks for post action method of "Edit"*@

    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    </div>
    <div class="form-group row">
        <h2 class="text-info pl-3"> Delete Category</h2>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" disabled class="form-control" />
                        @*<span asp-validation-for="CategoryName" class="text-danger"></span>*@
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                        @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class=" btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-success"><i class="fas fa-sign-out-alt"></i> &nbsp; Back</a>
                            @* If we're using views within same category, asp-controller="category" can be optional'  *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
    </div>
</form>

@*The below section adds the client side validation*@
@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" />
    }

}
